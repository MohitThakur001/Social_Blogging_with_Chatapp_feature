<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="30dp"
    tools:context=".StartActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="Auth and Chat"
        android:textColor="#ffffff"
        android:fontFamily="cursive"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:id="@+id/l1"
        android:orientation="vertical"></LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/messa"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text"
        android:layout_marginTop="50dp"
        android:id="@+id/messa"/>





    <ru.katso.livebutton.LiveButton xmlns:livebutton="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chat"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/messa"

        android:layout_centerHorizontal="true"
        android:gravity="center"

        android:text="Chat"
        android:textColor="#ffffff"
        android:textSize="26sp"

        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:fontFamily="@font/baloo"
        livebutton:backgroundColor="#000000"
        livebutton:corners="4dp"
        livebutton:normalHeight="6dp"

        livebutton:pressedHeight="2dp"
        livebutton:shadowColor="#b16262" />

    <ru.katso.livebutton.LiveButton xmlns:livebutton="http://schemas.android.com/apk/res-auto"
        android:id="@+id/post"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/chat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Post your ideas"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/baloo"
        livebutton:backgroundColor="#000000"
        livebutton:corners="4dp"
        livebutton:normalHeight="6dp"
        livebutton:pressedHeight="2dp"
        livebutton:shadowColor="#b16262" />


</RelativeLayout>