<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="30dp"
    tools:context=".StartActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="     Blog application  \n ( With Chat feature )"
        android:textColor="#ffffff"
        android:fontFamily="cursive"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:id="@+id/l1"
        android:orientation="vertical"/>




    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/giff"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/l1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/back" />




    <ru.katso.livebutton.LiveButton xmlns:livebutton="http://schemas.android.com/apk/res-auto"
        android:id="@+id/blog"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/giff"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Blogger feature"
        android:textColor="#fff"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/baloo"
        livebutton:backgroundColor="#000"
        livebutton:corners="4dp"
        livebutton:normalHeight="6dp"
        livebutton:pressedHeight="2dp"
        livebutton:shadowColor="#b16262" />

    <ru.katso.livebutton.LiveButton xmlns:livebutton="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chat"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/blog"
        android:fontFamily="@font/baloo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Post and chat feature"
        android:textColor="#fff"
        android:textSize="21sp"
        livebutton:backgroundColor="#000"
        livebutton:corners="4dp"
        livebutton:normalHeight="6dp"
        livebutton:pressedHeight="2dp"
        livebutton:shadowColor="#b16262" />


</RelativeLayout>